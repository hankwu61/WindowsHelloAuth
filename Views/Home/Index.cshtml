@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Windows Hello Authentication</h1>
    <p class="lead">A secure way to authenticate using biometrics and security keys</p>
</div>

<div class="row mt-5">
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="bi bi-fingerprint text-primary" style="font-size: 3rem;"></i>
                <h3 class="mt-3">Biometric Authentication</h3>
                <p>Use your face, fingerprint or iris to securely log in to your account without typing passwords.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="bi bi-shield-lock text-primary" style="font-size: 3rem;"></i>
                <h3 class="mt-3">Enhanced Security</h3>
                <p>With Windows Hello, your biometric data never leaves your device, providing strong protection against phishing and credential theft.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="bi bi-person-check text-primary" style="font-size: 3rem;"></i>
                <h3 class="mt-3">Passwordless Experience</h3>
                <p>Enjoy a seamless and convenient login experience without having to remember complex passwords.</p>
            </div>
        </div>
    </div>
</div>

<div class="row mt-5">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h3>How to Get Started</h3>
            </div>
            <div class="card-body">
                <ol class="list-group list-group-numbered mb-4">
                    <li class="list-group-item d-flex justify-content-between align-items-start">
                        <div class="ms-2 me-auto">
                            <div class="fw-bold">Create an account</div>
                            Register with your email and password to create a new account
                        </div>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-start">
                        <div class="ms-2 me-auto">
                            <div class="fw-bold">Set up Windows Hello</div>
                            Navigate to your profile and add a Windows Hello device
                        </div>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-start">
                        <div class="ms-2 me-auto">
                            <div class="fw-bold">Use Windows Hello to log in</div>
                            Next time you log in, simply use your face, fingerprint, or PIN instead of a password
                        </div>
                    </li>
                </ol>
                
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <a asp-controller="Home" asp-action="Profile" class="btn btn-primary">
                        <i class="bi bi-person-gear"></i> Go to My Profile
                    </a>
                }
                else
                {
                    <div class="d-flex gap-2">
                        <a asp-controller="Account" asp-action="Register" class="btn btn-primary">
                            <i class="bi bi-person-plus"></i> Register Now
                        </a>
                        <a asp-controller="Account" asp-action="Login" class="btn btn-outline-primary">
                            <i class="bi bi-box-arrow-in-right"></i> Log In
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
